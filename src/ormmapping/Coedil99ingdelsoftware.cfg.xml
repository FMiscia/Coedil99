<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
 "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
   	<!-- properties -->
		<property name="dialect">org.hibernate.dialect.MySQL5InnoDBDialect</property>
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://localhost:3306/coedil99</property>
		<property name="connection.username">root</property>
		<property name="connection.password"></property>
		<property name="show_sql">false</property>
		<property name="query.substitutions">true 1, false 0, yes 'Y', no 'N'</property>
		<!-- mapping files -->
		<mapping resource="ormmapping/elaboradistinta/model/Cantiere.hbm.xml" />
		<mapping resource="ormmapping/elaboradistinta/model/Cliente.hbm.xml" />
		<mapping resource="ormmapping/elaboradistinta/model/Commessa.hbm.xml" />
		<mapping resource="ormmapping/elaboradistinta/model/Distinta.hbm.xml" />
		<mapping resource="ormmapping/elaboradistinta/model/DocumentoOttimizzazione.hbm.xml" />
		<mapping resource="ormmapping/elaboradistinta/model/Geometria.hbm.xml" />
		<mapping resource="ormmapping/elaboradistinta/model/History.hbm.xml" />
		<mapping resource="ormmapping/elaboradistinta/model/Item.hbm.xml" />
		<mapping resource="ormmapping/elaboradistinta/model/ListaRintracciabilita.hbm.xml" />
		<mapping resource="ormmapping/elaboradistinta/model/Ordine.hbm.xml" />
		<mapping resource="ormmapping/elaboradistinta/model/RigaLavoro.hbm.xml" />
		<mapping resource="ormmapping/elaboradistinta/model/RigheLavoro.hbm.xml" />
	</session-factory>
</hibernate-configuration>
